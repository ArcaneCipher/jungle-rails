<tr>
  <td style="width: 100px;">
    <%= image_tag line_item.product.image.url, class: 'img-responsive', style: 'max-height: 80px;' %>
  </td>
  <td>
    <strong><%= line_item.product.name %></strong>
  </td>
  <td>
    <%= truncate(line_item.product.description, length: 100) %>
  </td>
  <td>
    <%= line_item.item_price.format %>
  </td>
  <td>
    <%= line_item.quantity %>
  </td>
  <td>
    <%= line_item.total_price.format %>
  </td>
</tr>
