<section class="admin-dashboard container mt-5">

  <header class="page-header mb-4">
    <h1>Admin Dashboard</h1>
    <p class="test-muted">Store Overview</p>
  </header>

  <div class="row g-4">
    <div class="col-md-6">
      <div class="card shadow-sm h-100">
        <div class="card-body text-center">
          <h5 class="card-title">Total Products</h5>
          <p class="display-4"><%= @product_count %></p>
          <%= link_to 'View All Products', admin_products_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card shadow-sm h-100">
        <div class="card-body text-center">
          <h5 class="card-title">Total Categories</h5>
          <p class="display-4"><%= @category_count %></p>
          <%= link_to 'Categories', admin_categories_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>

</section>